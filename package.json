{
  "name": "@stardust-configs/tsconfig",
  "version": "0.1.0",
  "description": "Shareable TypeScript config",
  "keywords": [
    "typescript",
    "tsconfig"
  ],
  "homepage": "https://github.com/stardust-configs/tsconfig#readme",
  "bugs": "https://github.com/stardust-configs/tsconfig/issues",
  "license": "MIT",
  "author": "P-Chan",
  "files": [
    "base.json",
    "next.json",
    "node12.json",
    "node14.json",
    "recommended.json",
    "tsconfig.json"
  ],
  "main": "tsconfig.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/stardust-configs/tsconfig.git"
  },
  "scripts": {
    "validate": "jsv \"base.json\" \"next.json\" \"node12.json\" \"node14.json\" \"recommended.json\" \"tsconfig.json\" --schema \"https://json.schemastore.org/tsconfig\"",
    "version:major": "standard-version -r major",
    "version:minor": "standard-version -r minor",
    "version:patch": "standard-version -r patch"
  },
  "devDependencies": {
    "@stardust-configs/json-schema-validator": "0.4.0",
    "standard-version": "9.3.0"
  },
  "peerDependencies": {
    "typescript": "*"
  }
}
